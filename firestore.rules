rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    match /products/{productId} {
      allow read: if resource.data.status == "active";
      allow create, update, delete: if isAdmin();
    }

    match /settings/{docId} {
      // Public read for store settings only
      allow read: if docId == "store";
      allow write: if docId == "store" && isAdmin();
    }

    match /orders/{orderId} {
      // Orders are never created/updated from client SDK.
      // Tracking is done ONLY via API using Admin SDK.
      allow read, create, update, delete: if false;
    }

    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isSignedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /auditLogs/{logId} {
      allow read, write: if false;
    }

    match /stockLogs/{logId} {
      allow read, write: if false;
    }

    match /paymentOps/{operationCode} {
      allow read, write: if false;
    }

    match /counters/{docId} {
      allow read, write: if false;
    }

    match /rateLimits/{docId} {
      allow read, write: if false;
    }
  }
}
